# ===========================================
# 教育管理系统前端配置
# ===========================================

# 应用基本信息
VITE_APP_NAME=教育管理系统
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development
VITE_APP_DESCRIPTION=基于 Vue 3 + Element Plus 的教育管理系统前端

# API 配置
VITE_API_BASE_URL=http://api.localhost
VITE_API_TIMEOUT=10000
VITE_API_VERSION=v1

# 后端服务地址配置
VITE_ADMIN_API_URL=http://admin.localhost
VITE_API_SYSTEM_URL=http://api.localhost
VITE_FRONT_API_URL=http://localhost:3000

# Omise 支付配置
VITE_OMISE_PUBLIC_KEY=pkey_test_65ggqd9jdlaax89pkex
VITE_OMISE_ENVIRONMENT=test
VITE_OMISE_DEFAULT_CURRENCY=THB

# 支付相关配置
VITE_PAYMENT_ENABLED=true
VITE_PAYMENT_METHODS=credit_card,bank_transfer
VITE_PAYMENT_CURRENCIES=THB,USD,EUR,JPY,SGD

# 数据库配置（前端显示用）
VITE_DB_TYPE=postgresql
VITE_DB_HOST=postgresql
VITE_DB_PORT=5432

# 认证配置
VITE_AUTH_TOKEN_KEY=education_token
VITE_AUTH_USER_KEY=education_user
VITE_AUTH_ROLE_KEY=education_role
VITE_TOKEN_EXPIRE_TIME=3600

# 路由配置
VITE_ROUTER_MODE=history
VITE_ROUTER_BASE=/

# 开发服务器配置
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_DEV_SERVER_OPEN=true
VITE_DEV_SERVER_CORS=true

# 构建配置
VITE_BUILD_OUT_DIR=dist
VITE_BUILD_ASSETS_DIR=assets
VITE_BUILD_SOURCE_MAP=true
VITE_BUILD_MINIFY=true

# 代理配置
VITE_PROXY_TARGET=http://api.localhost
VITE_PROXY_CHANGE_ORIGIN=true
VITE_PROXY_SECURE=false

# 日志配置
VITE_LOG_LEVEL=debug
VITE_LOG_ENABLED=true
VITE_LOG_CONSOLE=true

# 主题配置
VITE_THEME_PRIMARY_COLOR=#409eff
VITE_THEME_SUCCESS_COLOR=#67c23a
VITE_THEME_WARNING_COLOR=#e6a23c
VITE_THEME_DANGER_COLOR=#f56c6c
VITE_THEME_INFO_COLOR=#909399

# 国际化配置
VITE_I18N_LOCALE=zh-CN
VITE_I18N_FALLBACK_LOCALE=en-US
VITE_I18N_AVAILABLE_LOCALES=zh-CN,en-US,th-TH

# 功能开关
VITE_FEATURE_PAYMENT=true
VITE_FEATURE_CHAT=false
VITE_FEATURE_NOTIFICATION=true
VITE_FEATURE_DARK_MODE=false
VITE_FEATURE_PWA=false

# 第三方服务配置
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_BAIDU_ANALYTICS_ID=

# 文件上传配置
VITE_UPLOAD_MAX_SIZE=10485760
VITE_UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
VITE_UPLOAD_PATH=/uploads

# 缓存配置
VITE_CACHE_ENABLED=true
VITE_CACHE_PREFIX=education_
VITE_CACHE_TTL=3600

# 安全配置
VITE_SECURITY_CSRF=true
VITE_SECURITY_XSS=true
VITE_SECURITY_CSP=true

# 性能配置
VITE_PERFORMANCE_LAZY_LOAD=true
VITE_PERFORMANCE_PRELOAD=true
VITE_PERFORMANCE_COMPRESSION=true

# 调试配置
VITE_DEBUG_ENABLED=true
VITE_DEBUG_LEVEL=info
VITE_DEBUG_CONSOLE=true
VITE_DEBUG_NETWORK=true
